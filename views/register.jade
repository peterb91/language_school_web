extends layout

block content
  body#page-top.register_body.background-cover
    .container(style="min-height: 800px")
      .card.card-register.mx-auto.register_window
        .card-header.bg-dark.text-white
          | Register for a course
        .card-body.bg-light
          form(method="post", action="")
            .form-group
              .form-row
                .col-md-6
                  label(for='exampleInputName') First name
                  input#exampleInputName.form-control(name="first_name", type='text', aria-describedby='nameHelp', placeholder='Enter first name')
                .col-md-6
                  label(for='exampleInputLastName') Last name
                  input#exampleInputLastName.form-control(name="last_name", type='text', aria-describedby='nameHelp', placeholder='Enter last name')
              .form-row
                .col-md-6
                  label(for='languageInput') Language
                  select#languageInput.form-control(name="language", type='text', aria-describedby='nameHelp', placeholder='Choose a language')
                    option English
                    option German
                    option Spanish
                .col-md-6
                  label(for='languageLevel') Level
                  select#languageLevel.form-control(name="level", type='text', aria-describedby='nameHelp', placeholder='Choose a level')
                    option A1
                    option A2
                    option B1
                    option B2
                    option C1
                    option C2
            h6
              | Register an Account      
            .form-group
              label(for='exampleInputEmail1') Email address
              input#exampleInputEmail1.form-control(name="login", type='email', aria-describedby='emailHelp', placeholder='Enter email')
            .form-group
              .form-row
                .col-md-6
                  label(for='exampleInputPassword1') Password
                  input#exampleInputPassword1.form-control(name="password", type='password', placeholder='Password')
                .col-md-6
                  label(for='exampleConfirmPassword') Confirm password
                  input#exampleConfirmPassword.form-control(name="confirm_password", type='password', placeholder='Confirm password')
            a.btn.btn-primary.btn-block(href='login.html') Register
          .text-center
            a.d-block.small.mt-3(href='/login') Login Page
            a.d-block.small(href='/forgot_password') Forgot Password?

