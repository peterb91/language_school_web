extends layout

block navigation
  include navbar_profile_user.jade

block content
    .content-wrapper
      .container-fluid
        // Breadcrumbs
        ol.breadcrumb
          li.breadcrumb-item Accout Page
            a(href='#') 
          li.breadcrumb-item.active Account
      h1 Edit Profile
      .row(style="min-height: 992px;")
        // left column
        .col-md-3
          .text-center
            img.avatar.img-circle(src='//placehold.it/100', alt='avatar')
            h6 Upload a different photo...
            input.form-control(type='file')
        // edit form column
        .col-md-9.personal-info
          .alert.alert-info.alert-dismissable
            a.panel-close.close(data-dismiss='alert') Ã—
            i.fa.fa-coffee
            |           Please enter new value and press 
            strong "Save Changes"
            | to update your personal info or credentials.
          h3 Personal info
          form.form-horizontal(role='form')
            .form-group
              label.col-lg-3.control-label First name:
              .col-lg-8
                input.form-control(value='Jane', type='text')
            .form-group
              label.col-lg-3.control-label Last name:
              .col-lg-8
                input.form-control(value='Bishop', type='text')
            .form-group
              label.col-lg-3.control-label Email:
              .col-lg-8
                input.form-control(value='janesemail@gmail.com', type='text')
            .form-group
              label.col-lg-3.control-label Time Zone:
              .col-lg-8
                .ui-select
                  select#user_time_zone.form-control
                    option(value='Hawaii') (GMT-10:00) Hawaii
                    option(value='Alaska') (GMT-09:00) Alaska
                    option(value='Pacific Time (US & Canada)') (GMT-08:00) Pacific Time (US & Canada)
                    option(value='Arizona') (GMT-07:00) Arizona
                    option(value='Mountain Time (US & Canada)') (GMT-07:00) Mountain Time (US & Canada)
                    option(value='Central Time (US & Canada)', selected='selected') (GMT-06:00) Central Time (US & Canada)
                    option(value='Eastern Time (US & Canada)') (GMT-05:00) Eastern Time (US & Canada)
                    option(value='Indiana (East)') (GMT-05:00) Indiana (East)
            h3 Credentials
            .form-group
              label.col-md-3.control-label Username:
              .col-md-8
                input.form-control(value='janeuser', type='text')
            .form-group
              label.col-md-3.control-label Password:
              .col-md-8
                input.form-control(value='11111122333', type='password')
            .form-group
              label.col-md-3.control-label Confirm password:
              .col-md-8
                input.form-control(value='11111122333', type='password')
            .form-group
              label.col-md-3.control-label
              .col-md-8
                input.btn.btn-primary(value='Save Changes', type='button')
